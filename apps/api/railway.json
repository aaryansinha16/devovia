{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "rootDirectory": "/",
    "buildCommand": "cd apps/api && pnpm run build",
    "watchPatterns": ["apps/api/**", "packages/database/**"]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd apps/api && npx prisma migrate deploy && node dist/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/api/hc",
    "healthcheckTimeout": 100
  },
  "serviceId": "78b2b18b-bb84-41e0-be9f-7ba52648069e"
}
