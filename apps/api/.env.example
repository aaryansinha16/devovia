# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/devovia?schema=public"

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_EXPIRATION=1d
JWT_REFRESH_EXPIRATION=7d

# App
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Session
SESSION_SECRET=your_session_secret_key_here

# OAuth - GitHub
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:4000/api/auth/github/callback

# Cloudinary - Image Upload
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Encryption - CRITICAL: Must be at least 32 characters
ENCRYPTION_KEY=your_very_long_encryption_key_at_least_32_characters_long

# Platform API URLs (optional - defaults provided)
VERCEL_API_URL=https://api.vercel.com
NETLIFY_API_URL=https://api.netlify.com
RAILWAY_API_URL=https://backboard.railway.app/graphql
RENDER_API_URL=https://api.render.com
FLY_IO_API_URL=https://api.fly.io/graphql
AWS_AMPLIFY_API_URL=https://amplify.us-east-1.amazonaws.com
CLOUDFLARE_API_URL=https://api.cloudflare.com/client/v4
GITHUB_API_URL=https://api.github.com
HEROKU_API_URL=https://api.heroku.com
DIGITAL_OCEAN_API_URL=https://api.digitalocean.com

# Webhook Configuration
WEBHOOK_MAX_PAYLOAD_SIZE=10mb
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1000

# AI Configuration (OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
