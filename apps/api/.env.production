# Production environment variables
NODE_ENV=production

# Database - You'll need to update this with your production database URL
DATABASE_URL="your_production_database_url"

# JWT
JWT_SECRET=your_production_jwt_secret_key_here
JWT_REFRESH_SECRET=your_production_jwt_refresh_secret_key_here
JWT_EXPIRATION=1d
JWT_REFRESH_EXPIRATION=7d

# App
PORT=4000
FRONTEND_URL=https://devovia.com

# Session
SESSION_SECRET=your_production_session_secret_key_here

# OAuth - GitHub (Production)
# Replace these with your production GitHub OAuth app credentials
GITHUB_CLIENT_ID=your_production_github_client_id_here
GITHUB_CLIENT_SECRET=your_production_github_client_secret_here
GITHUB_CALLBACK_URL=https://api.devovia.com/api/auth/github/callback

# API URL
API_URL=https://api.devovia.com/api
